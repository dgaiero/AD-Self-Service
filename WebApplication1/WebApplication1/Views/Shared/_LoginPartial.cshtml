@if (Request.IsAuthenticated)
{
    <text>
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text">
                @if (User.Identity.Name != null)
                {
                    @*<text>Hello, @User.Identity.Name!</text>*@
                }
                else
                {
                    @*<text>Hello</text>*@
                }
            </li>
            <li>
                @Html.ActionLink("Sign out", "SignOut", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info", @role = "button"})
            </li>
        </ul>
    </text>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info", @role = "button", id = "loginLink" })</li>
    </ul>
}
